{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Serverless offline debug",
            "runtimeExecutable": "/opt/homebrew/bin/npx",
            "runtimeArgs": [
                "serverless",
                "offline",
                "start",
                "--stage=development"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}